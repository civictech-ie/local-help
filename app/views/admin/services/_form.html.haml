= form_with model: @service, url: [:admin, @service], data: {remote: false} do |f|
  .fields
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :description
      = f.text_area :description
    .field
      = f.label :areas_str, 'Areas'
      = f.text_field :areas_str
    .field
      = f.label :categories_str, 'Categories'
      = f.text_field :categories_str
    .field
      = f.label :address_line_1
      = f.text_field :address_line_1
    .field
      = f.label :address_line_2
      = f.text_field :address_line_2
    .field
      = f.label :address_city
      = f.text_field :address_city
    .field
      = f.label :address_county
      = f.text_field :address_county
    .field
      = f.label :address_postcode
      = f.text_field :address_postcode
    .field
      = f.label :contact_name
      = f.text_field :contact_name
    .field
      = f.label :contact_number
      = f.text_field :contact_number
    .field
      = f.label :contact_email
      = f.text_field :contact_email
    .field
      = f.label :contact_url
      = f.text_field :contact_url

  .actions= f.submit 'Save'
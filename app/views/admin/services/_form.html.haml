.py-4
  .card
    .card-body
      = form_with model: @service, url: [:admin, @service], data: {remote: false} do |f|
        .form-group
          = f.label :title
          = f.text_field :title, class: 'form-control'
        .form-group
          = f.label :description
          = f.text_area :description, class: 'form-control'
        .form-group
          = f.label :areas_str, 'Areas'
          = f.text_field :areas_str, class: 'form-control'
        .form-group
          = f.label :categories_str, 'Categories'
          = f.text_field :categories_str, class: 'form-control'
        .form-group
          = f.label :address_line_1
          = f.text_field :address_line_1, class: 'form-control'
        .form-group
          = f.label :address_line_2
          = f.text_field :address_line_2, class: 'form-control'
        .form-group
          = f.label :address_city
          = f.text_field :address_city, class: 'form-control'
        .form-group
          = f.label :address_county
          = f.text_field :address_county, class: 'form-control'
        .form-group
          = f.label :address_postcode
          = f.text_field :address_postcode, class: 'form-control'
        .form-group
          = f.label :contact_name
          = f.text_field :contact_name, class: 'form-control'
        .form-group
          = f.label :contact_number
          = f.text_field :contact_number, class: 'form-control'
        .form-group
          = f.label :contact_email
          = f.text_field :contact_email, class: 'form-control'
        .form-group
          = f.label :contact_url
          = f.text_field :contact_url, class: 'form-control'

        = f.button 'Save', class: 'btn btn-primary'